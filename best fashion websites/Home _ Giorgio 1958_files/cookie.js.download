
(function () {
    var haveCookie = Pil.Cookies.get("PCOOKIE");
    if ("1" != haveCookie) {
        var cDom = jQuery('#popupcookie');
        cDom.css('display', 'block');

        var wait = (waitCookie == undefined || isNaN(waitCookie)) ? 200 : waitCookie;

        setTimeout(function () {
            cDom.addClass('open');
        }, wait);

        jQuery('#popupcookie .close').on('click', function () {
            cDom.css('display', 'none');

            // Setta i cookie
            var exp = new Date();
            exp.setTime(exp.getTime() + (10000 * 24 * 60 * 60 * 1000));
            Pil.Cookies.set("PCOOKIE", "1", exp, "/");
            return false;
        });
    }
})();